<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorControlNormal">@color/white</item>

    </style>


    <!-- Base application theme. -->
    <style name="AppThemeCamera" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/camerag</item>
        <item name="colorPrimaryDark">@color/camerag</item>
        <item name="colorAccent">@color/camerag</item>
        <item name="colorControlNormal">@color/white</item>

    </style>


    <!-- Base application theme. -->
    <style name="AppThemeVideo" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/videog</item>
        <item name="colorPrimaryDark">@color/videog</item>
        <item name="colorAccent">@color/videog</item>
        <item name="colorControlNormal">@color/white</item>

    </style>


    <!-- Base application theme. -->
    <style name="AppThemeAudio" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/audiog</item>
        <item name="colorPrimaryDark">@color/audiog</item>
        <item name="colorAccent">@color/audiog</item>
        <item name="colorControlNormal">@color/white</item>
    </style>


    <!-- Base application theme. -->
    <style name="AppThemeSettings" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/settingsg</item>
        <item name="colorPrimaryDark">@color/settingsg</item>
        <item name="colorAccent">@color/settingsg</item>
        <item name="colorControlNormal">@color/white</item>
    </style>


    <style name="Theme_Dialog" parent="android:Theme.Light">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="colorControlNormal">@color/black</item>
    </style>


</resources>
